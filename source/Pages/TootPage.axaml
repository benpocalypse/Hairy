<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:styles="clr-namespace:Neumorphism.Avalonia.Styles;assembly=Neumorphism.Avalonia"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             x:Class="Hairy.Pages.TootPage">

    <StackPanel VerticalAlignment="Top" Orientation="Vertical">
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" >
            <ListBox Name="_lbToots" Items="{Binding TootsList, Mode=TwoWay}" VerticalAlignment="Top" Margin="10" />
        </ScrollViewer>
    </StackPanel>

</UserControl>
